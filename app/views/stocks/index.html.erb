<p id="notice"><%= notice %></p>

<h1>Listing Stocks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Income</th>
      <th>Efficiency</th>
      <th>Buy date</th>
      <th>Buy tax</th>
      <th>Amount</th>
      <th>Wallet</th>
      <th>Closing price</th>
      <th>Closing date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.name %></td>
        <td><%= stock.initial_income %></td>
        <td><%= stock.current_income %></td>
        <td><%= stock.buy_date %></td>
        <td><%= stock.buy_tax %></td>
        <td><%= stock.amount %></td>
        <td><%= stock.closing_price %></td>
        <td><%= stock.closing_date %></td>
        <td><%= stock.Wallet.name %></td>
        <td><%= link_to 'Show', stock %></td>
        <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
        <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

